    "demographics-custom": {
      "type": "questionnaire",
      "description": "Demographic and background questions for visualization research study",
      "response": [
        {
          "id": "gender",
          "prompt": "What is your **gender**?",
          "required": true,
          "type": "radio",
          "withOther": true,
          "options": [
            "Woman",
            "Man",
            "Non-binary",
            "Questioning",
            "Prefer not to say"
          ]
        },
        {
          "id": "age",
          "prompt": "What is your **age group**?",
          "required": true,
          "type": "radio",
          "options": [
            "18-24 years",
            "25-34 years",
            "35-44 years",
            "45-54 years",
            "55-64 years",
            "65+ years",
            "Prefer not to say"
          ]
        },
        {
          "id": "education",
          "prompt": "What is the **highest degree or level of education** you have completed?",
          "required": true,
          "type": "radio",
          "withOther": true,
          "options": [
            "Less than high school",
            "High school diploma or equivalent (e.g., GED, Matura)",
            "Bachelor's degree",
            "Master's degree",
            "Doctorate (e.g., PhD, EdD)",
            "Prefer not to say"
          ]
        },
        {
          "id": "field-of-study",
          "prompt": "What is your **primary field of study or work**?",
          "required": true,
          "type": "radio",
          "withOther": true,
          "options": [
            "Computer Science / Information Technology",
            "Data Science / Statistics",
            "Business / Economics",
            "Social Sciences (Psychology, Sociology, etc.)",
            "Natural Sciences (Biology, Chemistry, Physics, etc.)",
            "Engineering",
            "Arts / Design",
            "Humanities",
            "Healthcare / Medicine",
            "Education"
          ]
        },
        {
          "id": "chart-reading-frequency",
          "prompt": "How often do you **read or interpret charts and graphs**?",
          "required": true,
          "type": "radio",
          "options": [
            "Never",
            "Rarely (few times per year)",
            "Occasionally (few times per month)",
            "Regularly (few times per week)",
            "Frequently (daily or almost daily)"
          ]
        },
        {
          "id": "chart-creation-frequency",
          "prompt": "How often do you **create charts and graphs**?",
          "required": true,
          "type": "radio",
          "options": [
            "Never",
            "Rarely (few times per year)",
            "Occasionally (few times per month)",
            "Regularly (few times per week)",
            "Frequently (daily or almost daily)"
          ]
        },
        {
          "id": "color-vision",
          "prompt": "Do you have any form of color‑vision deficiency (often called color‑blindness)?",
          "required": false,
          "type": "radio",
          "options": [
            "Yes",
            "No",
            "Not sure",
            "Prefer not to say"
          ]
        },
        {
          "id": "color-vision-type",
          "prompt": "If yes, which type of color‑vision deficiency? (optional)",
          "required": false,
          "type": "shortText",
          "placeholder": "e.g., Deuteranopia, Protanopia, Tritanopia"
        }
      ]
    },

    "badge-questionaire-1": {
      "type": "questionnaire",
      "description": "Post-task questionnaire about visualization badges",
      "instruction": "### Please answer the following questions",
      "instructionLocation": "aboveStimulus",
      "response": [
        { "id": "noticed-in-task", "prompt": "Do you notice the **visualization badges**? By visualization badges we refer to the graphical labels that were displayed bellow the visualizations (see figre). ![badge examples](mind-the-badge/assets/badge-examples.png)", "type": "radio", "options": ["Yes", "No", "Sometimes (I did not consistently check)", "Not sure"], "required": true },
        { "id": "noticed-interactivity", "prompt": "Did you notice these visualization badges were interactive (hover or click for details)?", "type": "radio", "options": ["Yes", "No", "Not sure"], "required": true },
        { "id": "notice-comments", "prompt": "Additional comments about noticing or interactivity", "type": "longText", "required": false, "minRows": 6, "autosize": true, "maxRows": 6 },
        { "id": "experience-with-badges", "prompt": "If you noticed the visualization badges, describe your experience using them alongside the visualization. Did they influence how you read and interpreted the visualization? If so, how?", "type": "longText", "required": false, "minRows": 6, "autosize": true, "maxRows": 6 },
        { "id": "ease-of-understanding", "prompt": "How easy was it to understand each visualization badge—from the label alone and from the detailed description on hover/click?", "type": "longText", "required": false, "minRows": 6, "autosize": true, "maxRows": 6 },
        { "id": "considered-in-notes", "prompt": "Did you consider information from visualization badges in Your Speech? Please explain.", "type": "longText", "required": false, "minRows": 6, "autosize": true, "maxRows": 6 },
        { "id": "most-least-useful", "prompt": "Which visualization badges were most and/or least useful? Why?", "type": "longText", "required": false, "minRows": 6, "autosize": true, "maxRows": 6 },
        { "id": "overall-help", "prompt": "Overall, did the visualization badges help you understand and interpret the visualization? Please explain.", "type": "longText", "required": false, "minRows": 6, "autosize": true, "maxRows":6 }
      ]
    },

    "badge-questionaire-2": {
      "type": "questionnaire",
      "description": "Post task likert scale questioanire about visualization badges",
      "instruction": "### Please answer the following questions",
      "instructionLocation": "aboveStimulus",
      "response": [
        { "id": "saliency", "prompt": "Visualization badges were easy to spot.", "type": "likert", "numItems": 5, "leftLabel": "Strongly Disagree", "rightLabel": "Strongly Agree", "required": true },
        { "id": "clutter", "prompt": "Visualization badges cluttered or distracted from the visualization.", "type": "likert", "numItems": 5, "leftLabel": "Strongly Disagree", "rightLabel": "Strongly Agree", "required": true },
        { "id": "interpretability", "prompt": "Visualization badges were clear and easy to interpret.", "type": "likert", "numItems": 5, "leftLabel": "Strongly Disagree", "rightLabel": "Strongly Agree", "required": true },
        { "id": "usefulness", "prompt": "Information in the visualization badges was useful for understanding the visualization.", "type": "likert", "numItems": 5, "leftLabel": "Strongly Disagree", "rightLabel": "Strongly Agree", "required": true },
        { "id": "trust", "prompt": "Visualization badges increased my trust in the information and methodology.", "type": "likert", "numItems": 5, "leftLabel": "Strongly Disagree", "rightLabel": "Strongly Agree", "required": true },
        { "id": "standardization", "prompt": "Visualization badges should be widely used alongside visualizations.", "type": "likert", "numItems": 5, "leftLabel": "Strongly Disagree", "rightLabel": "Strongly Agree", "required": true },
        { "id": "final-comments", "prompt": "Any additional comments?", "type": "longText", "required": false, "minRows": 3, "autosize": true, "maxRows": 8 }
      ]
    },

    "footnote-questionaire-1": {
