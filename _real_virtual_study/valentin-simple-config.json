{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.1.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Experiment 2",
    "version": "0.0.1",
    "authors": [
      "Valentin Edelsbrunner"
    ],
    "date": "2025-12-02",
    "description": "This study studies the perceptual footprint of visualization badges on visualization readers",
    "organizations": [
      "inria",
      "University of Bordeaux",
      "University of Edinburgh",
      "University of Oxford"
    ]
  },
  "uiConfig": {
    "contactEmail": "valentin.edelsbrunner@inria.fr",
    "logoPath": "revisitAssets/badge-logo.png",
    "withProgressBar": false,
    "sidebar": true
  },
  "importedLibraries": [],
  "baseComponents": {
    "stimuliWithBadge": {
      "description": "TODO",
      "type": "react-component",
      "path": "mind-the-badge/assets/StimuliWithBadge.tsx",
      "nextButtonLocation": "sidebar",
      "instructionLocation": "sidebar",
      "response": []
    },
    "stimuliWithFootnote": {
      "description": "Static stimulus with a chart image and a single textual footnote below.",
      "type": "react-component",
      "path": "mind-the-badge-experiment-2/assets/StimuliWithFootnote.tsx",
      "nextButtonLocation": "sidebar",
      "instructionLocation": "sidebar",
      "response": []
    }
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "mind-the-badge-experiment-2/assets/introduction.md",
      "nextButtonText": "Continue",
      "response": []
    },
    "consent": {
      "type": "markdown",
      "path": "mind-the-badge/assets/consent.md",
      "nextButtonText": "Accept and Continue",
      "response": []
    },
    "task-truncated-axis-badges": {
      "instruction": "Based on the chart, by what percentage is the revenue of Company B larger than Company A?*",
      "baseComponent": "stimuliWithBadge",
      "parameters": {
        "imageSrc": "mind-the-badge-experiment-2/assets/truncated-axis/source.png",
        "detailedInformation": "/mind-the-badge-experiment-2/assets/truncated-axis/grp-badges/visualization-badges.json"
      },
      "response": [
        {
          "id": "truncated-axis-estimate",
          "prompt": "Select one option.",
          "type": "radio",
          "required": true,
          "location": "sidebar",
          "options": [
            "Around 4%",
            "Around 10%",
            "Around 25%",
            "Around 50% or more"
          ]
        }
      ]
    },
    "task-truncated-axis-control": {
      "type": "image",
      "path": "mind-the-badge-experiment-2/assets/truncated-axis/source.png",
      "instruction": "Based on the chart, by what percentage is the revenue of Company B larger than Company A?*",
      "instructionLocation": "sidebar",
      "nextButtonLocation": "sidebar",
      "response": [
        {
          "id": "truncated-axis-estimate",
          "prompt": "Select one option.",
          "type": "radio",
          "required": true,
          "location": "sidebar",
          "options": [
            "Around 4%",
            "Around 10%",
            "Around 25%",
            "Around 50% or more"
          ]
        }
      ]
    },
    "task-truncated-axis-footnote": {
      "instruction": "Based on the chart, by what percentage is the revenue of Company B larger than Company A?*",
      "baseComponent": "stimuliWithFootnote",
      "parameters": {
        "imageSrc": "mind-the-badge-experiment-2/assets/truncated-axis/source.png",
        "footnoteText": "The vertical axis in this chart is truncated."
      },
      "response": [
        {
          "id": "truncated-axis-estimate",
          "prompt": "Select one option.",
          "type": "radio",
          "required": true,
          "location": "sidebar",
          "options": [
            "Around 4%",
            "Around 10%",
            "Around 25%",
            "Around 50% or more"
          ]
        }
      ]
    },
    "task-inverted-axis-badges": {
      "instruction": "Based on the chart, is the crime rate increasing or decreasing?*",
      "baseComponent": "stimuliWithBadge",
      "parameters": {
        "imageSrc": "mind-the-badge-experiment-2/assets/inverted-axis/source.png",
        "detailedInformation": "/mind-the-badge-experiment-2/assets/inverted-axis/grp-badges/visualization-badges.json"
      },
      "response": [
        {
          "id": "inverted-axis-estimate",
          "prompt": "Select one option.",
          "type": "radio",
          "required": true,
          "location": "sidebar",
          "options": [
            "Increasing",
            "Decreasing",
            "Staying about the same",
            "Not sure"
          ]
        }
      ]
    },
    "task-inverted-axis-control": {
      "type": "image",
      "path": "mind-the-badge-experiment-2/assets/inverted-axis/source.png",
      "instruction": "Based on the chart, is the crime rate increasing or decreasing?*",
      "instructionLocation": "sidebar",
      "nextButtonLocation": "sidebar",
      "response": [
        {
          "id": "inverted-axis-estimate",
          "prompt": "Select one option.",
          "type": "radio",
          "required": true,
          "location": "sidebar",
          "options": [
            "Increasing",
            "Decreasing",
            "Staying about the same",
            "Not sure"
          ]
        }
      ]
    },
    "task-inverted-axis-footnote": {
      "instruction": "Based on the chart, is the crime rate increasing or decreasing?*",
      "baseComponent": "stimuliWithFootnote",
      "parameters": {
        "imageSrc": "mind-the-badge-experiment-2/assets/inverted-axis/source.png",
        "footnoteText": "The vertical axis in this chart is inverted."
      },
      "response": [
        {
          "id": "inverted-axis-estimate",
          "prompt": "Select one option.",
          "type": "radio",
          "required": true,
          "location": "sidebar",
          "options": [
            "Increasing",
            "Decreasing",
            "Staying about the same",
            "Not sure"
          ]
        }
      ]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "consent",
      {
        "id": "group-assignment",
        "order": "latinSquare",
        "numSamples": 1,
        "components": [
          {
            "id": "control-group",
            "order": "fixed",
            "components": [
              "task-truncated-axis-control",
              "task-inverted-axis-control"
            ]
          },
          {
            "id": "footnote-group",
            "order": "fixed",
            "components": [
              "task-truncated-axis-footnote",
              "task-inverted-axis-footnote"
            ]
          },
          {
            "id": "badge-group",
            "order": "fixed",
            "components": [
              "task-truncated-axis-badges",
              "task-inverted-axis-badges"
            ]
          }
        ]
      }
    ]
  }
}


