{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.3.2/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Real vs Virtual Study Demo",
    "version": "1",
    "authors": ["Leana"],
    "date": "2025-12-02",
    "description": "First Part",
    "organizations": ["inria"]
  },
  "uiConfig": {
    "contactEmail": "",
    "helpTextPath": "_real_virtual_study/assets/observation/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": true,
    "enumerateQuestions": true,
    "studyEndMsg": "Thank you for completing the study. You may click this link and return to Prolific: [https://app.prolific.com/submissions/complete?cc=CE96X7ST&PROLIFIC_ID={PARTICIPANT_ID}](https://app.prolific.com/submissions/complete?cc=CE96X7ST&PROLIFIC_ID={PARTICIPANT_ID})",
    "urlParticipantIdParam": "PROLIFIC_ID"
  },
  "baseComponents": {
    "base-video-trial": {
      "type": "video",
      "description": "Video stimulus",
      "instruction": "Please watch the full video, then answer the question in the sidebar and click Next.",
      "forceCompletion": true,
      "nextButtonLocation": "sidebar",
      "response": [
        {
          "id": "video_instructions_sidebar",
          "type": "textOnly",
          "location": "sidebar",
          "prompt": "Please watch the video until it finishes.\n\nWhen you are done, click **Next** in this sidebar to continue."
        }
      ]
    },

    "base-feedback": {
      "type": "questionnaire",
      "description": "Correction Feedback",
      "nextButtonText": "Continue",
      "response": [
        {
          "id": "feedback-text",
          "type": "textOnly",
          "location": "belowStimulus",
          "prompt": "### Incorrect \n\n The correct object was: **{{correct_object}}**."
        }
      ]
    }
  },
  "components": {
    "IntroPage": {
      "type": "markdown",
      "path": "_real_virtual_study/assets/observation/part1_intro.md",
      "response": []
    },
    "ConsentPage": {
      "type": "markdown",
      "path": "_real_virtual_study/assets/observation/part1_consent.md",
      "response": []
    },

    "trial1A": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/banana_100.mp4"
    },
    "trial2A": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/banana_15.mp4"
    },
    "trial1B": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/banana_65.mp4"
    },
    "trial2B": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/apple_100.mp4"
    },
    "trial1C": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/apple_65.mp4"
    },
    "trial2C": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/apple_15.mp4"
    },
    "trial1D": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/screwdriver_100.mp4"
    },
    "trial2D": {
      "baseComponent": "base-video-trial",
      "path": "_real_virtual_study/assets/sample-stimuli/screwdriver_15.mp4"
    },

    "recognition-question": {
      "type": "questionnaire",
      "description": "Object recognition",
      "provideFeedback": true,
      "trainingAttempts": 1,
      "response": [
        {
          "id": "recog-q",
          "prompt": "What object did you see in the video",
          "location": "belowStimulus",
          "type": "shortText",
          "placeholder": "Enter your answer here"
        }
      ],
      "correctAnswer": [
        {
          "id": "recog-q",
          "answer": "{{correct_object}}"
        }
      ]
    },

    "identification-question": {
      "type": "questionnaire",
      "description": "Object recognition",
      "response": [
        {
          "id": "id-q",
          "prompt": "What this object real or virtual",
          "location": "belowStimulus",
          "type": "shortText",
          "placeholder": "Enter your answer here"
        }
      ],
      "correctAnswer": [{
        "id": "id-q",
        "answer": "OBJECT"
      }]
    },

    "PostQuestionnaire": {
      "type": "questionnaire",
      "response": [
          {
            "id": "q1",
            "prompt": "Did you experience any problems with our tool?",
            "location": "belowStimulus",
            "type": "longText",
            "placeholder": "Enter your answer here."
          },
          {
            "id": "q2",
            "prompt": "Did anything not render or display properly?",
            "location": "belowStimulus",
            "type": "longText",
            "placeholder": "Enter your answer here"
          },
          {
            "id": "q3",
            "prompt": "Any other issues or anything you would like to tell us?",
            "location": "belowStimulus",
            "type": "longText",
            "placeholder": "Enter your answer here"
          }
        ]
    },
    "EndPage": {
      "type": "markdown",
      "path": "_real_virtual_study/assets/end.md",
      "response": []
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "ConsentPage",
      "IntroPage",
      {
        "id": "group-assignment",
        "order": "latinSquare",
        "numSamples": 1,
        "components": [
          {
            "id": "groupA",
            "order": "fixed",
            "components": [
              {
                "order": "fixed",
                "components": [
                  "trial1A", "recognition-question", "identification-question","trial2A"
                ]
              },
              {
                "id": "groupB",
                "order": "fixed",
                "components": [
                  "trial1B","trial2B"
              ]
              },
              {
                "id": "groupC",
                "order": "fixed",
                "components": [
                  "trial1C","trial2C"
                ]
              },
              {
                "id": "groupD",
                "order": "fixed",
                "components": [
                  "trial1D","trial2D"
                ]
              },
              "PostQuestionnaire",
              "EndPage"
            ]
          }
        ]
      }
    ]
  }
}